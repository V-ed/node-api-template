{
  "name": "node-api-backend",
  "version": "0.0.1",
  "description": "",
  "main": "dist/main.ts",
  "scripts": {
    "start": "ts-node dist/main.ts",
    "dev": "ts-node -r tsconfig-paths/register src/main.ts",
    "watch": "nodemon src/main.ts",
    "test": "jest --detectOpenHandles --silent",
    "coverage:test": "jest --detectOpenHandles --silent --coverage",
    "build": "gulp build",
    "build:clean": "gulp cleanbuild",
    "debug": "node -r ts-node/register --inspect-brk src/main.ts",
    "db:clean": "gulp cleandb",
    "db:seed": "fixtures ./fixtures --config .env --require=ts-node/register",
    "seed": "npm-run-all -s db:clean db:seed",
    "init": "npm-run-all -s build:clean db:seed",
    "format": "eslint --fix \"src/**/*.ts\"",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:tests": "eslint \"tests/**/*.ts\"",
    "coverage:pr": "jest --detectOpenHandles --silent --coverage --json --outputFile=\"jest.results.json\""
  },
  "author": "Guillaume Marcoux",
  "license": "MIT",
  "devDependencies": {
    "@esbuild-plugins/tsconfig-paths": "^0.0.4",
    "@mikro-resources/fixtures": "^1.8.1",
    "@types/body-parser": "^1.19.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.11",
    "@types/express-session": "^1.17.3",
    "@types/gulp": "^4.0.8",
    "@types/gulp-rename": "^2.0.0",
    "@types/gulp-replace": "0.0.31",
    "@types/jest": "^26.0.20",
    "@types/json5": "^2.2.0",
    "@types/node": "^14.14.22",
    "@types/socket.io": "^2.1.13",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "del": "^6.0.0",
    "esbuild": "^0.8.39",
    "eslint": "^7.19.0",
    "gulp": "^4.0.2",
    "gulp-esbuild": "^0.3.21",
    "gulp-rename": "^2.0.0",
    "gulp-replace": "^1.0.0",
    "gulp-ts-alias": "^1.3.0",
    "gulp-typescript": "^6.0.0-alpha.1",
    "jest": "^26.6.3",
    "json5": "^2.2.0",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.0",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "@mikro-orm/core": "^4.4.4",
    "@mikro-orm/reflection": "^4.4.4",
    "@mikro-orm/sqlite": "^4.4.4",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "express-validator": "^6.9.2",
    "socket.io": "^3.1.0"
  }
}
