{
  "name": "node-api-backend",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "ts-node dist/index.js",
    "dev": "ts-node -r dotenv/config src/index.ts",
    "watch": "nodemon -r dotenv/config src/index.ts",
    "test": "jest --detectOpenHandles --silent",
    "test:coverage": "jest --detectOpenHandles --silent --coverage",
    "build": "gulp build",
    "build:clean": "gulp cleanbuild",
    "debug": "node -r ts-node/register --inspect-brk src/index.ts",
    "db:clean": "gulp cleandb",
    "db:seed": "fixtures ./fixtures --config .env --require=ts-node/register",
    "seed": "npm-run-all -s db:clean db:seed",
    "init": "npm-run-all -s build:clean db:seed",
    "format": "eslint --fix \"src/**/*.ts\"",
    "lint": "eslint \"src/**/*.ts\"",
    "pr:coverage": "jest --detectOpenHandles --silent --coverage --json --outputFile=\"jest.results.json\""
  },
  "author": "Guillaume Marcoux",
  "license": "MIT",
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.11",
    "@types/express-session": "^1.17.3",
    "@types/gulp": "^4.0.8",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.22",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "axios": "^0.21.1",
    "del": "^6.0.0",
    "eslint": "^7.19.0",
    "gulp": "^4.0.2",
    "gulp-rename": "^2.0.0",
    "gulp-replace": "^1.0.0",
    "gulp-typescript": "^6.0.0-alpha.1",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^26.5.0",
    "ts-node": "^9.1.1",
    "typeorm-fixtures-cli": "^1.9.1",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "cookie-parser": "^1.4.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "express-validator": "^6.9.2",
    "reflect-metadata": "^0.1.13",
    "sqlite3": "^5.0.1",
    "typeorm": "^0.2.30"
  }
}